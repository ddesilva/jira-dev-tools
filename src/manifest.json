{
  "version": "0.0.1",
  "manifest_version": 2,
  "name": "Snow Dog",
  "description": "Jira + Git helper to streamline your DX",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/js/browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "activeTab"
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "web_accessible_resources": [
    "sidebar.html"
  ],
  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
